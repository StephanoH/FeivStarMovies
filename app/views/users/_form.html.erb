   <div class="row">
    <div class="card-panel white">

      <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
        <% end %>
      </ul>
      <% end %>
      <div>
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div><br>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div><br>

      <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div><br>

      <div>
        <button class="btn waves-effect waves-light red lighten-1" type="submit" name="Register!">Register!
          <i class="material-icons right">done</i>
        </button>
      </div>

      <% end %>
    </div>

  </div>

