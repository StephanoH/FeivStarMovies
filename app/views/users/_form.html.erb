<%= form_for @user, url: users_new_path  do |f| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div><br>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div><br>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div><br>

  <%= f.submit 'Register!' %>

<% end %>
