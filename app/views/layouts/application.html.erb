<!DOCTYPE html>
<html>
<head>
  <title>FievStarMovies</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
  <!-- FONTS -->
  <link href='https://fonts.googleapis.com/css?family=Cookie|Roboto|Slabo+27px' rel='stylesheet' type='text/css'>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="assets/materialize.min.css"  media="screen,projection"/>

  <!--Import jQuery before materialize.js-->
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script type="text/javascript" src="assets/materialize.min.js"></script>

</head>
<body>
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper red lighten-1">
        <span id="website-name"><%= link_to 'FievStarMovies', root_path %></span>
        <%= image_tag("logo.png",  class: "logo", size: "50") %>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><%= link_to 'Home', root_path %></li>
            <% if logged_in? %>
            <li><%= link_to 'Logout', logout_path%></li>
            <% else %>
            <li><%= link_to 'Login', login_path %></li>
            <li><%= link_to 'Register', new_user_path %></li>
            <% end %>
            <li><%= link_to 'Cheesify', root_path, class: "cheesy" %></li>
            <li><%= link_to 'Search', search_path %></li>
          </ul>
        </div>
      </nav>
    </div>

    <div class="center-container">
      <%= yield %>
    </div>

  </body>
  </html>
