<div id="user-form-container">
  <h4 class='red-text lighten-1'>Login</h2>

  <% if @error %>
  <%= @error %>
  <% end %>

  <%= form_for @user, url: {action: 'create'} do |f|%>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <button class="btn waves-effect waves-light red lighten-1" type="submit" name="Login">Login
      <i class="material-icons right">send</i>
    </button>
  </div>

  <% end %>
</div>
