<h2>Login</h2>

  <% if @error %>
    <%= @error %>
  <% end %>

  <%= form_for @user, url: {action: 'create'} do |f|%>
  <div>
  <%= f.label :username %>
  <%= f.text_field :username %>
  </div>

  <div>
  <%= f.label :password %>
  <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit 'Login' %>
  </div>

<% end %>
