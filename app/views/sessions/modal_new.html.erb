<div id="modal_login_container">
   <div class="row">
    <div class="card-panel white">
  <% if @error %>
  <%= @error %>
  <% end %>

  <%= form_for @user, url: login_path, method: :post do |f|%>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <button class="btn waves-effect waves-light red lighten-1" type="submit" name="Login">Login
      <i class="material-icons right">done</i>
    </button>
  </div>

  <% end %>
  </div>
  </div>
</div>
